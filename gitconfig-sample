# This is a sample file - copy it to ~/.gitconfig, change your name, ...
#
[user]
    name = Your name
    email = Yout email address
           
[core]
    # unix line endings
    autocrlf = input
    # windows line endings
    # autocrlf = true

[include]
    path = .git-config/common
    path = .git-config/colors
    path = .git-config/tools
    path = .git-config/aliases

# Now following by 'git config' ADDED configuration values 

